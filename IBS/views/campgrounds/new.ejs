<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Yeni Restoran</h1>
    <div class="col-md-6 offset-md-3">
		<!-- enctype cloudinary için eklendi .-->
        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data"> 
            <div class="mb-3">
                <label class="form-label" for="title">Restoran Adı</label>
                <input class="form-control" type="text" id="title" name="campground[title]" required>
                <div class="valid-feedback">
                    İyi Görünüyor
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Restoran Konumu</label>
                <input class="form-control" type="text" id="location" name="campground[location]" required>
                <div class="valid-feedback">
                    İyi Görünüyor
                </div>
            </div>

            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="campground[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="price">Restoran Kişi Sayısı</label>
                <div class="input-group">
                    <span class="input-group-text" ></span>
                    <input type="text" class="form-control"  placeholder="0" aria-label="price"
                        aria-describedby="price-label" name="campground[price]" required>
                </div>
                <div class="valid-feedback">
                    İyi Görünüyor
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Tanıtım</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"
                    required></textarea>
                <div class="valid-feedback">
                    İyi Görünüyor
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Resim Seç ...</span>
                        <span class="form-file-button">Ara</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Restoran Ekle</button>
            </div>
        </form>
        <a href="/campgrounds">Tüm Restoranlar</a>
    </div>
</div>